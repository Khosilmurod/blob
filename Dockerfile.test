# Dockerfile for Raspberry Pi simulation testing
FROM node:18-bullseye

# Install Chromium and dependencies
RUN apt-get update && apt-get install -y \
    chromium \
    xvfb \
    && rm -rf /var/lib/apt/lists/*

# Create pi user
RUN useradd -m -s /bin/bash pi

# Set working directory
WORKDIR /home/pi/blob-simulation

# Copy project files
COPY . .

# Install dependencies
RUN npm install

# Set permissions
RUN chmod +x start-simulation.sh install-pi.sh
RUN chown -R pi:pi /home/pi/blob-simulation

# Switch to pi user
USER pi

# Expose port
EXPOSE 8080

# Test command
CMD ["./start-simulation.sh"]